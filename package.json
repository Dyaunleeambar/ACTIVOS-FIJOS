{
  "name": "sistema-gestion-medios-informaticos",
  "version": "1.0.0",
  "description": "Sistema de Gestión de Medios Informáticos - Empresa de Servicios Electroenergéticos",
  "main": "electron/main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron:dev": "electron .",
    "electron:npx": "npx electron@30 .",
    "electron:build": "electron-builder --win",
    "init-db": "node src/config/init-database.js",
    "update-db": "node src/config/update-database.js",
    "convert-docs": "node scripts/convert-docs-v2.js",
    "convert-single": "node scripts/convert-single.js",
    "build-docs": "npm run convert-docs",
    "convert-pdf": "node scripts/convert-docs-v2.js"
  },
  "keywords": [
    "asset-management",
    "it-management",
    "inventory-system"
  ],
  "author": "IT Department",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "highlight.js": "^11.9.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^9.1.6",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "puppeteer": "^21.5.2"
  },
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "com.organizacion.medios",
    "productName": "Sistema de Gestión de Medios",
    "files": [
      "public/**",
      "src/**",
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      "data/**",
      "uploads/**",
      "templates/**",
      "pdf-docs/**"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
